pipeline {
    agent any
    environment {
        APP_NAME = "TravelMemoryApp"
    }
    stages {
        stage('Login') {
            steps {
                // Use the 'docker-hub-credentials' ID that we created
                withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    
                    echo "Preparing to log in as user: ${DOCKER_USER}" // The variable is available here
                    echo "The application name is: ${env.APP_NAME}"
                    sh 'echo "My password is: $DOCKER_PASS"'
                }
            }
        }
    }
}